    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Press A",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/xcv/__main__.py",
            "console": "integratedTerminal",
            "args": ["--push", "A"]
        },
        {
            "name": "Python: --help",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/xcv/__main__.py",
            "console": "integratedTerminal",
            "args": ["--help"]
        }
    ]
}